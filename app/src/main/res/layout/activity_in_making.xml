<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".YourOrderInMakingActivity">

    <TextView
        android:id="@+id/makingView"
        android:layout_width="300dp"
        android:layout_height="100dp"
        android:layout_marginTop="200dp"
        android:gravity="center"
        android:textSize="30sp"
        android:text="@string/im_making"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/makingRachelNote"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_margin="50dp"
        android:layout_marginTop="100dp"
        android:gravity="center"
        android:textSize="25sp"
        android:text="@string/Rachels_working"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/makingView" />

</androidx.constraintlayout.widget.ConstraintLayout>